@{
    ViewData["Title"] = "Transfers";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h1 class="display-4">Transfers</h1>
        </div>
    </div>
</div>

<div class="row">

    <table id="WithdrawTransactionRepository" class="table table-striped table-centered mb-0">
        <thead>
            <tr class="table-primary">
                <th>id</th>
                <th>Date</th>
                <th>WalletFromId</th>
                <th>WalletToId</th>
                <th>Value</th>
                <th>Currency</th>
                <th>Hash</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Transfers)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td><span style="white-space: nowrap;">@item.Date.ToString("dd-MM-yyyy HH:mm:ss")</span></td>
                    <td>
                        @item.WalletFromId
                    </td>
                    <td>
                        @item.WalletToId
                    </td>
                    <td>
                        <span class="decimal-data">@item.Value</span>
                    </td>
                    <td>
                        @item.CurrencyAcronim
                    </td>
                    <td>
                        @item.Hash
                    </td>
                    <td>
                        @item.Comment
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>